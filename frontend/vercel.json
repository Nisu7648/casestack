{
  "version": 2,
  "name": "casestack-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": {
      "description": "Backend API URL (e.g., https://casestack-backend.onrender.com)",
      "value": ""
    }
  }
}
