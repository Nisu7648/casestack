{
  "name": "casestack-backend",
  "region": "oregon",
  "plan": "free",
  "env": {
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens (change this to a random string)",
      "value": "casestack-secret-change-this-to-random-string-2024"
    },
    "JWT_EXPIRES_IN": {
      "description": "JWT token expiration time",
      "value": "7d"
    },
    "STORAGE_TYPE": {
      "description": "File storage type (local or s3)",
      "value": "local"
    },
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    }
  },
  "buildCommand": "npm install && npx prisma generate && npx prisma migrate deploy",
  "startCommand": "node src/server.casestack.js",
  "healthCheckPath": "/health",
  "databases": [
    {
      "name": "casestack-db",
      "plan": "free",
      "databaseName": "casestack",
      "user": "casestack_user"
    }
  ]
}
